<% include header %>
	<table class="ui striped table">
	 	<thead>
	    	<tr>
		      	<th>ID</th>
		      	<th>用户名</th>
		      	<th>日期</th>
		      	<th>内容</th>
		      	<th>菜名</th>
	    	</tr>
	  	</thead>
		<tbody>
		 <% comments.forEach(function(comment){ %>
			<tr>
	    		<td><%=  comment.id %></td>
	    		<td><%=  comment.username %></td>
	    		<td><%=  comment.commentDate %></td>
	    		<td><%=  comment.content %></td>
	    		<td><%=  comment.dishName %></td>
	    	</tr>
		 <% }) %>
		</tbody>
	</table>
	<%- include("pagination",{type:'comment'}) %>
<% include footer %>
